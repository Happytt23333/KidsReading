<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loginactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.light.myapplication.Loginactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="            我的宝贝"
                android:textSize="20sp"
                android:layout_weight="8"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#55BBCA"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:text="登录"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#55BBCA"
                android:id="@+id/wancheng"/>
        </LinearLayout>

         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_centerHorizontal="true">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="30dp"
                 android:text="昵称"
                 android:textSize="16sp"
                 android:layout_weight="1"
                 android:layout_marginTop="11dp"
                 android:textStyle="bold" />

             <EditText
                 android:id="@+id/login_username"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:inputType="textPersonName"
                 android:layout_weight="5"
                 android:hint="宝贝昵称"
                 android:ems="10"
                 android:layout_marginTop="11dp"
                 android:layout_marginLeft="15dp"
                 android:layout_centerHorizontal="true" />
         </LinearLayout>
        <View
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="性别"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:textStyle="bold" />
            <Button
                android:text="女孩"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="11dp"
                android:id="@+id/button"
                android:background="@drawable/shape_tianjia"/>
            <Button
                android:text="男孩"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:id="@+id/button2"
                android:background="@drawable/shape_tianjia"/>
        </LinearLayout>
        <View
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="年龄"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_weight="5"
                android:hint="宝贝年龄"
                android:ems="10"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <View
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="我是"
                android:textSize="16sp"
                android:layout_weight="0.5"
                android:layout_marginTop="11dp"
                android:textStyle="bold" />
            <Button
                android:text="妈妈"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:id="@+id/button3"
                android:background="@drawable/shape_tianjia"/>
            <Button
                android:text="爸爸"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:id="@+id/button4"
                android:background="@drawable/shape_tianjia"/>
        </LinearLayout>
        <View
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="密码"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="5"
                android:hint="请输入密码"
                android:ems="10"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <View
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />

    </LinearLayout>
</RelativeLayout>
